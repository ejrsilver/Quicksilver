if [ -z LD_LIBRARY_PATH ]; then
    unset LD_LIBRARY_PATH
fi

if [ -z DYLD_LIBRARY_PATH ]; then
    unset DYLD_LIBRARY_PATH
fi
 
export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:${POWER_LOC}/lib"
export DYLD_LIBRARY_PATH="${DYLD_LIBRARY_PATH}:${POWER_LOC}/lib"

export POWERAPI_DEBUG=31
export POWERAPI_ROOT="node0"
export POWERAPI_CONFIG="./hwloc_server.xml"

export PATH="$PATH:${POWER_LOC}/lib"
